\def\PplCulmusScale{1.10}
\DeclareFontFamily{cp1255}{ppl}{\hyphenchar\font45}
\DeclareFontShape{cp1255}{ppl}{m}{n}
      {<-> [\PplCulmusScale] frank }{}
%%%%%%% Font/shape undefined, therefore substituted
\DeclareFontShape{cp1255}{ppl}{m}{sc}
  {<->ssub * ppl/m/n}{}
%%%%%%% Italicized shape
\DeclareFontShape{cp1255}{ppl}{m}{it}
      {<-> [\PplCulmusScale] franki }{}
%%%%%%% Font/shape undefined, therefore substituted
\DeclareFontShape{cp1255}{ppl}{m}{sl}
  {<->ssub * ppl/m/it}{}
%%%%%%% Bold extended series
\DeclareFontShape{cp1255}{ppl}{bx}{n}
      {<-> [\PplCulmusScale] frankb }{}
%%%%%%% Font/shape undefined, therefore substituted
\DeclareFontShape{cp1255}{ppl}{b}{n}
  {<->ssub * ppl/bx/n}{}
%%%%%%% Font/shape undefined, therefore substituted
\DeclareFontShape{cp1255}{ppl}{b}{it}
  {<->ssub * ppl/bx/it}{}
%%%%%%% Font/shape undefined, therefore substituted
\DeclareFontShape{cp1255}{ppl}{bx}{sl}
  {<->ssub * ppl/bx/n}{}
%%%%%%% Font/shape undefined, therefore substituted
\DeclareFontShape{cp1255}{ppl}{bx}{it}
  {<-> [\PplCulmusScale] frankbi }{}
